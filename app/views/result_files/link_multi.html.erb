<h1>Link Sequence Result Files to Samples</h1>
<h2>Source Lab: <%= @chosen_lab.lab_name %></h2>

<%
=begin %>
<h3>Debug: Params</h3>
<%= debug(params) %>

<h3>Debug: result_files</h3>
<%= debug(@result_files) %>

<h3>Debug: samples</h3>
<%= debug(@samples) %>

<h3>Debug: Results on Filesystsem</h3>
<% @results_on_filesystem.each do |file|%>
  <%= file[:document] %><br />
<% end %>
<br />
<h3>Debug: Results in Database before save</h3>
<% @result_files_before_save.each do |file|%>
  <%= file[:document] %><br />
<% end %>
<br />
<h3>Debug: Files that already exist in DB</h3>
<% @exist_in_db.each do |document|%>
  <%= document %><br />
<% end %>
<br />
<%
=end %>
<% if (@files_saved != 0) %>
<fieldset class="info">
<label>New Files</label>
<ul>
<% @new_files.each do |document|%>
  <li><%= document %></li>
<% end %>
</ul>
</fieldset>
<% else %>
<h3>No new files</h3>
<% end %>
<%= break_clear %>
<h3>Choose Another Lab</h3>
<%= render :partial => 'lab_form', :locals => {:lab_list => @labs} %>
<br />
<fieldset class="form">
<legend>Link Results to Samples</legend>
<% form_tag(:action => :link_files_to_samples) do  %>
<table class="form-with-columns" border="0">
    <tr>
      <!--th>Link to Sample(s)</th-->
      <th>Filename</th>
      <th>Select Sample(s)</th>     
      <th>Content Type</th>
      <th>File Size</th>
      <th>Updated By</th>
      <th>Lab</th>
      <th>Notes</th>
    </tr>
    <% @result_files.each do |rfile| %>
	<% fields_for 'result_files[]', rfile do |f| %>
    <tr>
      <!--td><%= check_box_tag("_result_files[checked_file][]") %></td-->
      <%= f.hidden_field(:id) %>
      <%= hidden_field_tag(:chosen_lab_id, params[:lab_id]) %>
      <td><%= h rfile.document %></td>
      <td><%= f.collection_select(:sample_ids, @samples, :id, :barcode_and_name, {:selected => rfile.sample_ids},
                                 {:multiple => :true, :name => "result_files[#{rfile.id}]sample_ids[]", :size=> 4}) %></td>                      
      <td><%= h rfile.document_content_type %></td>
      <td><%= h rfile.document_file_size %></td>
      <td><%= h rfile.updated_by %></td>
      <td><%= h rfile.lab_id %></td>
      <td><%= f.text_area(:notes, :rows => 3, :cols => 15) %></td>
    </tr>    
    <% end %>
	<% end %>   
</table>
</fieldset>
<%= break_clear(submit_tag "Submit") %>
<% end %>


