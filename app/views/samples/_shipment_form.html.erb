<span class="form_title">Shipment Details:</span>
<table class="form">	
    <tr>
      <th><%=f.label :date_shipped %></th>
	  <td><%=f.calendar_date_select(:date_shipped, :valid_date_check => "date <= (new Date()).stripTime()") %></td>
	  <th><%=f.label :fedex_tracking_number %></th>
	  <td><%=f.text_field(:fedex_tracking_nr) %></td>
	</tr>

    <tr>
      <th>Comments</th>
      <td colspan=6><%=f.text_area :comments, :cols => 85, :rows => 2 %></td>
    </tr>
</table>
