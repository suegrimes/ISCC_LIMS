<%= render '/shared/errors', model: @user %>
<!--%= error_messages_for :user %-->

<%= form_for(@user) do |f| -%>
<fieldset class="form">
<legend>Lab: <%=h @user.lab.lab_name %></legend>
<table class="form">
<tr>
	<th><%= f.label :login %></th>
	<td><%= f.text_field :login %></td>
</tr>
<tr>
    <th><%= f.label :email %></th>
    <td><%= f.text_field :email %></td>
</tr>
<tr>
    <th><%= label :curr_user, :current_password %></th>
    <td><%= password_field :curr_user, :current_password %></td>
</tr>
<tr>
    <th><%= f.label :new_password %></th>
    <td><%= f.password_field :password %></td>
</tr>
<tr>
    <th><%= f.label :new_password_confirmation %></th>
    <td><%= f.password_field :password_confirmation %></td>
</tr>
</table>
</fieldset>

<%= raw break_clear(f.submit 'Update') %>

<% end -%>
